<div class="w-full mx-auto md:w-2/3">
  <h1 class="mb-6 text-2xl font-bold">Create your account</h1>
  
  <%= form_with(model: @user, url: registrations_path, local: true) do |f| %>
    <%= render 'shared/form_errors', model: @user %>
    <!-- Email Field -->
    <div class="mb-4">
      <%= f.label :email_address, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email_address, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Enter your email" %>
    </div>

    <!-- Password Field -->
    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Enter your password" %>
    </div>

    <!-- Password Confirmation Field -->
    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Confirm your password" %>
    </div>

    <!-- Submit Button -->
    <div class="col-span-6 sm:flex sm:items-center sm:gap-4">
      <div class="inline">
        <%= f.submit "Register", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
      </div>

      <%= render 'shared/users' %>
    </div>

  <% end %>
</div>