<% if model.errors.any? %>
  <div class="p-4 mb-4 text-red-700 border border-red-400 rounded-md bg-red-50">
    <h2 class="mb-2 font-semibold">There were some errors:</h2>
    <ul class="list-disc list-inside">
      <% model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>